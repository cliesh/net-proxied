{
    "compilerOptions": {
      "declaration": true,
      "noImplicitAny": true,
      "noEmitOnError": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2020",
      "outDir": "./dist",
      "lib": ["es2020"]
    },
    "include": [
      "src/**/*.ts"
    ]
  }
  